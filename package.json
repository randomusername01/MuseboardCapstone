{
  "name": "MuseBoard",
  "productName": "MuseBoard",
  "description": "Your creative hub for notes and visuals",
  "keywords": [],
  "main": "./main.js",
  "version": "1.0.0",
  "author": "benmolloy",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "auto-launch": "6.0.0-rc1",
    "electron-reload": "2.0.0-alpha.1",
    "electron-settings": "4.0.4",
    "electron-store": "10.0.0",
    "fix-esm": "1.0.1",
    "nodemon": "3.1.7"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "win": {
      "target": [
      "nsis",
      "portable"
      ],
      "icon": "builds/icons/museboard-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "randomusername01",           
        "repo": "MuseBoardCapstone",
        "draft": false,
        "prerelease": false
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "builds/icons/museboard-icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "builds/icons/museboard-icon.png"
    },
    "appId": "com.museboard.app",
    "productName": "MuseBoard",
    "directories": {
      "output": "dist"
    }
  }
}
